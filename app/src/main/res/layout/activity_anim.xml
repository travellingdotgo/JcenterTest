<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harvic.animation_demo.MainActivity" >

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff00ff"
            android:text="textview"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_animation"
        android:layout_below="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="btn_animation"/>
    <Button
        android:id="@+id/btnLayoutPara"
        android:layout_below="@+id/btn_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="btnLayoutPara"/>
    <TextView
        android:id="@+id/tv2"
        android:text="tv2"
        android:layout_below="@+id/btnLayoutPara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
